# Enable mod_rewrite
RewriteEngine On

# Set the RewriteBase
RewriteBase /GHG_PHP/

# Prevent direct access to includes
RewriteRule ^includes/ - [F,L]

# Redirect index.html to index.php
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.*)$ index.php?request=$1 [QSA,L]
